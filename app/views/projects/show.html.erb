<div class="container p-4">
  <div class="pt-5 d-flex"> <%# project-header %>
    <div class="header-left-section d-flex flex-column justify-content-center border-bottom"> <%# header-left-section %>
      <p class="m-0 ps-5 pe-5 pb-4 pt-4"><span class="fw-bold">Projects</span> / <%= @project.name %></p>
      <h1 class="ps-5 pe-5"><%= @project.name %></h1>
      <div class="ps-5 pe-5 pt-4 pb-4">
        <span class="me-3"><i class="fa-solid fa-user"></i> <%= @project.amount_of_people %></span> <span>Posted by <span class="underlined-bold-text"><%= @project.user.first_name %> <%= @project.user.last_name %></span> <%= @hours %> <%= "hour".pluralize(@hours) %> ago</span>
      </div>
    </div>
    <% if current_user  %> <%# header-right-section %>
      <div class="header-right-section border-bottom">
      <%# something if logged in %>
      </div>
    <% else %>
      <div class="header-right-section">
        <div class="sign-up text-center">
          <h2>Ready to collaborate?</h2>
          <%= link_to "Sign Up", new_user_registration_path, class: "button-signup" %>
          <div>
            <span>Already have an account? </span>
            <%= link_to "Login", new_user_session_path, class: "fw-bold" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="border-bottom p-5"> <%# project-body %>
    <p class="m-0"><%= @project.description %></p>
  </div>
  <div class="p-5"> <%# project-footer %>
    <p class="fw-bold mb-4">Skills</p>
    <div class="d-flex justify-content-around align-items-center flex-grow-1">
      <span class="skill text-center">Skill</span>
      <span class="skill text-center">Skill</span>
      <span class="skill text-center">Skill</span>
      <span class="skill text-center">Skill</span>
      <span class="skill text-center">Skill</span>
      <span class="skill text-center">Skill</span>
    </div>
  </div>
</div>
