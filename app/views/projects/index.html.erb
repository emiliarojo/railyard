<div class="d-flex p-4">
  <div class="filter-menu-section text-center">Filter menu section</div> <%# filter-menu %>

  <div class="cards-section d-flex flex-column ps-4 pe-4"> <%# cards-section %>
    <% @projects.each do |project| %>
      <div class="project-card d-flex mt-4 mb-4 border"> <%# project-card %>
        <div class="card-user d-flex flex-column align-items-center justify-content-center ms-3 mt-2 mb-2"> <%# card-user %>
          <img class="avatar-medium mb-2" src="https://images.pexels.com/photos/2586823/pexels-photo-2586823.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="User profile image"> <%# Placeholder for the user profile image %>
          <div class="text-center">
            <%= project.user.first_name %> <%= project.user.last_name %>
          </div>
        </div>
        <div class="d-flex flex-column justify-content-center flex-grow-1 ms-3 me-3 p-2 pt-4 pb-4"> <%# card-info %>
          <div class="d-flex mb-2"> <%# info-header %>
            <div class="d-flex align-items-center"><h1 class="m-0"><h1><%= link_to project.name, project_path(project) %></h1></div>
            <div class="d-flex justify-content-around align-items-center flex-grow-1"> <%# skills-section %>
              <% project.project_skills.each do |project_skill| %>
                <span class="skill text-center"><%= project_skill.skill.technology %></span>
              <% end %>
            </div>
          </div>
          <div><%= project.description %></div> <%# info-body %>
          <%#= project.amount_of_people %>
        </div>
      </div>
    <% end %>
  </div>
</div>
