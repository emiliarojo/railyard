<% unless controller_name == "pages" && action_name == "home" %>
  <nav class="navbar d-flex justify-content-between align-items-center p-0 border-bottom">
    <div class="navbar-container-left d-flex justify-content-start align-items-center">
      <%# <a href class= "navbar-title">
        Railyard
      </a> %>
      <%= link_to "Railyard", root_path, class: "navbar-title" %>
      <div class="search-bar">
        <%= form_with url: projects_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search for a Rails Project"
        %>
    <% end %>
      </div>
    </div>
    <div class="navbar-container-right d-flex justify-content-end align-items-center pe-5">
      <% if current_user %>
        <div class="d-flex justify-content-around align-items-center w-25">
          <div class="new-project-icon">
            <%= link_to '<i class="fa-solid fa-plus"></i>'.html_safe, new_project_path %>
          </div>
          <div class="message-notifications-icon">
            <%= link_to chatrooms_path do %>
              <i class="fa-solid fa-comments"></i>
            <% end %>
          </div>
          <div class="nav-user-profile">
            <%= link_to raw('<i class="fa-solid fa-circle-user"></i>'), user_path(current_user) %>
          </div>
        </div>
      <% else %>
        <%= button_to "Login", new_user_session_path, data: { turbo: false }, class: "button-login" %>
        <a href="/users/sign_up" class="button-signup">Sign up</a>
      <% end %>
    </div>
  </nav>
<% else %>
  <nav class="navbar-landing-page">
    <%= button_to "Login", new_user_session_path, data: { turbo: false }, class: "button-login" %>
    <a href="/users/sign_up" class="button-signup">Sign up</a>
  </nav>
<% end %>
